# Binance Momentum Monitor Configuration

# Required: Discord webhook URL for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Optional: Override default configuration

# Signal Detection
TIMEFRAME=15m
LOOKBACK_PERIODS=8
VOLUME_WINDOW_HOURS=8
VOLUME_ZSCORE_THRESHOLD=2.0
PRICE_CHANGE_THRESHOLD=0.05

# Universe Filtering
MIN_HOURLY_VOLUME=1000
UNIVERSE_CACHE_TTL=3600

# Alert Management
ALERT_COOLDOWN=30

# WebSocket (Phase 2)
WS_MAX_STREAMS=1024
WS_MAX_MSG_PER_SEC=10
WS_RECONNECT_DELAY=5

# REST API
REST_RATE_LIMIT=1200

# Monitoring
METRICS_INTERVAL=60
LOG_LEVEL=INFO

# API Instrumentation (Phase 1 complete)
API_METRICS_BUFFER_SIZE=1000
API_LOG_ALL_CALLS=false

# Optional: Path to YAML config file (overrides env vars)
# CONFIG_PATH=/path/to/config.yaml
